<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="gmsuite.program.weathergenerator"
    android:versionCode="1"
    android:versionName="1.0" 
	>
	
    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="21" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:supportsRtl = "true"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Profile_Selection"
            android:label="@string/app_name" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".New_Profile_Form"
            android:label="@string/title_activity_new__profile__form" android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".Generator"
            android:label="@string/title_activity_generator" android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
